{% extends 'partials/main.html.twig' %}

{% block stylesheets %}

{{ parent() }}

<!-- jsvectormap css -->
<link href="{{ asset('libs/jsvectormap/css/jsvectormap.min.css') }}" rel="stylesheet" type="text/css" />

<!--Swiper slider css-->
<link href="{{ asset('libs/swiper/swiper-bundle.min.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block content %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card" id="customerList">

                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1 text-uppercase">
                        Agregar oficina
                    </h4>
                </div>

                <div class="card-body px-4">
                    {{ form_start (officeForm, {attr: { 'data-turbo': 'false' } }) }}

                    <div class="row">
                        <div class="col-xl-4">
                            {{ form_row (officeForm.impcCode) }}

                        </div>
                        <div class="col-xl-4">
                            {{ form_row (officeForm.impcShortName) }}

                        </div>
                        <div class="col-xl-4">
                            {{ form_row (officeForm.OrganisationShortName) }}

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-4">
                            {{ form_row (officeForm.impcCodeFullName) }}

                        </div>
                        <div class="col-xl-4">
                            {{ form_row (officeForm.organisationFullName) }}

                        </div>
                        <div class="col-xl-4">
                            {{ form_row (officeForm.impcOrganisationCode) }}

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-3">
                            {{ form_row (officeForm.partyIdentifier) }}

                        </div>
                        <div class="col-xl-3">
                            {{ form_row (officeForm.function) }}

                        </div>
                        <div class="col-xl-3">
                            {{ form_row (officeForm.validFrom) }}

                        </div>
                        <div class="col-xl-3">
                            {{ form_row (officeForm.validTo) }}

                        </div>
                    </div>
                    <div class="d-flex  justify-content-between align-items-center flex-wrap">
                        <div>
                            {{ form_row (officeForm.mailFlowInbound) }}
                            {{ form_row (officeForm.mailFlowOutbound) }}
                            {{ form_row (officeForm.mailFlowClosedTransit) }}
                        </div>
                        <div>
                            {{ form_row (officeForm.categoryAInbound) }}
                            {{ form_row (officeForm.categoryBInbound) }}
                            {{ form_row (officeForm.categoryCInbound) }}
                            {{ form_row (officeForm.categoryDInbound) }}

                        </div>
                        <div>
                            {{ form_row (officeForm.categoryAOutbound) }}
                            {{ form_row (officeForm.categoryBOutbound) }}
                            {{ form_row (officeForm.categoryCOutbound) }}
                            {{ form_row (officeForm.categoryDOutbound) }}

                        </div>
                        <div>
                            {{ form_row (officeForm.mailClassUInbound) }}
                            {{ form_row (officeForm.mailClassCInbound) }}
                            {{ form_row (officeForm.mailClassEInbound) }}
                            {{ form_row (officeForm.mailClassTInbound) }}
                        </div>
                        <div>
                            {{ form_row (officeForm.mailClassUOutbound) }}
                            {{ form_row (officeForm.mailClassCOutbound) }}
                            {{ form_row (officeForm.mailClassEOutbound) }}
                            {{ form_row (officeForm.mailClassTOutbound) }}
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-xl-6">
                            {{ form_row (officeForm.specialType) }}

                        </div>
                        <div class="col-xl-6">
                            {{ form_row (officeForm.bilateralAgreement) }}
                        </div>

                    </div>





                    {{ form_end(officeForm)}}
                </div>
            </div>
        </div>
    </div>
</div>









{% endblock %}