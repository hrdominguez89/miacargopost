{% for flash_message in app.flashes('notice') %}
    <div class="alert alert-primary alert-label-icon alert-dismissible fade show" role="alert">
        <i class="ri-user-smile-line label-icon"></i>
        {{ flash_message }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}

